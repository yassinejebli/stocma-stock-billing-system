<!DOCTYPE html>
<html lang="en">


<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="msapplication-tap-highlight" content="no">
    @{
        var pageName = ViewContext.RouteData.GetRequiredString("action").ToLower() + ".png";
    }
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,600,700&display=swap" />
    <link href='https://fonts.googleapis.com/css?family=Libre Barcode 39' rel='stylesheet'>
    <!-- Favicons-->

    <link rel="icon" href="~/Content/@pageName" sizes="32x32" />

    <style>
        html {
            font-size: 90%;
        }
        body{
            @* background-color: #eff4f7 !important; *@
            font-family: 'Roboto', sans-serif;
            margin-bottom: 80px;
        }

        body{
            background-image: linear-gradient(125deg,#27ae60,#2c3e50,#2980b9,#e76a3c,#8e44ad);
            background-size: 400% 400%;
            animation: bganimation 10s infinite;
        }

        @@keyframes bganimation {
        0%{
            background-position: 0% 50%;
        }
        50%{
            background-position: 100% 50%;
        }
        100%{
            background-position: 0% 50%;
        }
        }


        input[type="date"]::-webkit-inner-spin-button,    
        input[type="date"]::-webkit-clear-button{
            display: none;
        }
        input{
            font-family: 'Roboto', sans-serif;
        }
        /* Chrome, Safari, Edge, Opera */
        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
        -webkit-appearance: none;
            margin: 0;
        }

        /* Firefox */
        input[type=number] {
        -moz-appearance: textfield;
        }
        .MuiAutocomplete-noOptions{
            display: none;
        }
        .MuiAutocomplete-endAdornment{
            top: calc(50% - 12px) !important;
        }
        .MuiSelect-icon{
            top: calc(50% - 10px) !important;
        }
        .MuiSelect-selectMenu{
            min-height: unset !important;
        }
        *::-webkit-scrollbar {
            display: none;
            -ms-overflow-style: none;
        }
    </style>


</head>
<body>
    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()
    }

    @RenderBody()
    @*<script src="~/Scripts/dist/Home/react/bundle.js"></script>*@
    @Html.IncludeVersionedJs("/Scripts/dist/Home/react/bundle.js")
    <script id="__bs_script__">
    //<![CDATA[
        document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.js?v=2.26.7'><\/script>".replace("HOST", location.hostname));
//]]></script>
</body>
</html>