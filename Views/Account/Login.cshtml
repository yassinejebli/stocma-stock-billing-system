                        <div class="login-logo">
                            <a href="#"><img src="~/Content/images/soly.png" alt="Sanitaire" style="width:70%" /></a>
                        </div>
                    }
                    else if (StatistiqueController.getCompanyName().ToUpper() == "SBCIT" || StatistiqueController.getCompanyName().ToUpper() == "SUIV")
                    {
                        <a href="#"><img src="~/Content/images/@string.Concat(StatistiqueController.getCompanyName().ToUpper(),".png")" style="width:70%; margin-left:60px;" /></a>

                    }
                    else
                    {
                        <div class="login-logo">
                            <a href="#"><img src="~/Content/images/sanisoft.png" alt="Sanitaire" style="width:70%" /></a>
                        </div>
                    }
